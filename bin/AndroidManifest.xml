<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.threebowl.foodsystem"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="15" />

    <application
        android:name=".FoodSystemApp"
        android:icon="@drawable/icon_logo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main" />
        <activity android:name=".views.Activity_FirstPage" />
        <activity android:name=".views.Activity_ContentPage" />
        <activity android:name=".views.Activity_Style_Other" />
        <activity android:name=".views.MainTabs" 
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".views.Activity_Style" />
        <activity android:name=".views.Activity_Common" />
        <activity android:name=".views.Activity_About" />
        
    </application>

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>